Summary: Scripts to update local copies gettting from vcs repositories 
Name: lcopy
Version: @PACKAGE_VERSION@
Release: 3
Source: lcopy-@PACKAGE_VERSION@.tar.bz2
#Requires: 
Buildarch: noarch

Buildroot: %{_tmppath}/%{name}-root
License: GPL

Group: Development/Tools

%description
Scripts to update local copies getting from vcs  repositories 


%package sources
Summary: Well known sources lcopy directory configuration.
Group: Development/Tools
Requires: lcopy
%description sources
Typical configuration for lcopy-refresh which is run by cron.

%prep
%setup -q

%build
%configure
make

%install
rm -rf $RPM_BUILD_ROOT
%makeinstall
mkdir -p $RPM_BUILD_ROOT%{_sysconfdir}/lcopy-refresh.d
mkdir -p $RPM_BUILD_ROOT%{_sysconfdir}/cron.daily

install -p -m 755 etc/lcopy-refresh.cron    $RPM_BUILD_ROOT%{_sysconfdir}/cron.daily/lcopy-refresh
install -p -m 644 etc/sources.lcopy-refresh $RPM_BUILD_ROOT%{_sysconfdir}/lcopy-refresh.d/sources.lcopy-refresh

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%{_bindir}/lcopy-rebirth
%{_bindir}/lcopy-refresh
%{_bindir}/liblcopy.sh
%{_libexecdir}/lcopy/plugins/10lcopy-ctags
%{_libexecdir}/lcopy/plugins/10lcopy-etags

%attr(0755, root, root) %{_sysconfdir}/cron.daily/lcopy-refresh
%attr(0755, root, root) %dir %{_sysconfdir}/lcopy-refresh.d

# TODO user account 'sources' must be introduced.
%files sources
%defattr(-,root,root)
%{_sysconfdir}/lcopy-refresh.d/sources.lcopy-refresh


