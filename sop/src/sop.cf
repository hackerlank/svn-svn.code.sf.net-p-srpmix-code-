SOP_SOURCES_DIR=/srv/sources
SOP_ARCHIVES_DIR=${SOP_SOURCES_DIR}/archives
SOP_MIRROR_DIR=${SOP_ARCHIVES_DIR}/mirror
SOP_BACKUP_DIR=/backup



SOP_ENABLE_MIRROR=yes
SOP_MIRROR_TARGET_HOST=(
	"ftp.redhat.com"
)

SOP_MIRROR_TARGET_PATH=(
	"/pub/redhat"
)

SOP_MIRROR_TARGET_PATTERN=(
	'*.src.rpm'
)


SOP_ENABLE_BACKUP=yes
SOP_BACKUP_SRC=(
	"${SOP_MIRROR_DIR}/ftp.redhat.com"
	"${SOP_MIRROR_DIR}/extra"
)

SOP_BACKUP_DST=(
	"${SOP_BACKUP_DIR}/mirror/ftp.redhat.com"
	"${SOP_BACKUP_DIR}/mirror/extra"
)
