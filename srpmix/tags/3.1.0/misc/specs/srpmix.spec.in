Summary: Scripts to install and expand src.rpm
Name: srpmix
Version: @PACKAGE_VERSION@
Release: 0
Source: srpmix-@PACKAGE_VERSION@.tar.bz2
Requires: hardlink cpio rpm coreutils
Buildarch: noarch

Buildroot: %{_tmppath}/%{name}-root
License: GPL

Group: Development/Tools

%description
Scripts to install and expand src.rpm.

%prep
%setup -q

%build
%configure
make

%install
rm -rf $RPM_BUILD_ROOT
%makeinstall

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%{_bindir}/srpmix
%{_bindir}/libsrpmix.sh

%{_bindir}/srpmix-etags
%{_bindir}/srpmix-ctags
%{_bindir}/srpmix-cscope
%{_bindir}/srpmix-gonzui

%{_bindir}/srpmix-vanilla

%{_bindir}/srpmix-spider

%{_bindir}/srpmix-meta-hardlink

