Summary: Scripts to install and expand src.rpm
Name: srpmix
Version: @PACKAGE_VERSION@
Release: 0
Source: srpmix-@PACKAGE_VERSION@.tar.bz2
Requires: hardlink cpio rpm coreutils emacs-common guile
Buildarch: noarch

Buildroot: %{_tmppath}/%{name}-root
License: GPL

Group: Development/Tools

%description
Scripts to expand src.rpm.

%prep
%setup -q

%build
%configure
make

%install
rm -rf $RPM_BUILD_ROOT
%makeinstall

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%{_bindir}/srpmix
%{_bindir}/srpmix-ix
%{_bindir}/libsrpmix.sh

%{_bindir}/srpmix-wrap

%{_bindir}/srpmix-db

%{_bindir}/srpmix-envelop

%{_bindir}/srpmix-weakview-dist
%{_bindir}/srpmix-weakview-packages
%{_bindir}/srpmix-plugin

%{_datadir}/srpmix/plugins

