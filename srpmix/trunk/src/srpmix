#!/bin/sh

TARGET_NAME=
TARGET_SRPM=

LIBSRPMIX=libsrpmix.sh
function try_source
{
    source $1
    if test $? != 0; then
        echo "*** ABORT..." "cannot find $1" 1>&2
	exit 1
    fi
}
try_source ${LIBSRPMIX}

MY_TMPDIR=
WRAP_OPTS=""
RELEASE=
OUTPUT_DIR=
if test "`whoami`" = "root"; then
OUTPUT_FORMAT=rpm
else
OUTPUT_FORMAT=swrf
fi
DEBUG=""
SRPMIXBUILD_OPTS=

set -e


function print_usage
{
    echo "Usage: "
    echo "  srpmix [--hardlink]"
    echo "         [--output-dir=DIR]"
    echo "         [--output-format=<rpm|swrf>]"
    echo "         [--release=RELEASE]"
    echo "         [--debug]"
    echo "         [--ignore-error]"
    echo "         [--target=ARCH]"
    echo "         [--multi-targets]"
    echo "         [--keep-original]"
    echo "          --name=PACKAGE|--srpm=SRPM"
    echo
    echo "ARCH: i386(not for kenel), i686, x86_64, ia64, or ppc64"
#    TODO: Multi targets
#    TODO: URL support
#    echo ""
#    echo "As SRPM a url like http://... is acceptable."
#
#    TODO: --git
#          --hg
#          --tgz
#          --dir
#  
}

function parse_arguments
{
    while [ $# -gt 0 ]; do
	case "$1" in
            --help|-h)
		print_usage
		exit 0
		;;
	    --name=*)
                TARGET_NAME="$(echo $1 | sed 's/--name=//')"
                ;;
	    --srpm=*)
	        TARGET_SRPM="$(echo $1 | sed 's/--srpm=//')"
		;;
	    --release=*)
		RELEASE="$(echo $1 | sed 's/--release=//')"
		SRPMIX_PKG_RELEASE=$RELEASE
	        WRAP_OPTS="$WRAP_OPTS --release=$RELEASE"
		ENVELOP_OPTS="$ENVELOP_OPTS --release=$RELEASE"
		SRPMIXBUILD_OPTIONS="$SRPMIXBUILD_OPTIONS $1"
	        ;;
	    --hardlink)
	        export SRPMIX_DO_HARDLINK=yes
	        ;;
	    --ignore-error)
	        export SRPMIX_IGNORE_ERROR=yes
		;;
	    --multi-targets)
	        export SRPMIX_MULTI_TARGETS=yes
		SRPMIXBUILD_OPTIONS="$SRPMIXBUILD_OPTIONS $1"
		;;
            --keep-original)
	        export SRPMIX_KEEP_ORIGINAL=yes
		SRPMIXBUILD_OPTIONS="$SRPMIXBUILD_OPTIONS $1"
		;;
	    --output-dir=*)
	        OUTPUT_DIR="$(echo $1 | sed 's/--output-dir=//')"
		if test -d "${OUTPUT_DIR}"; then
		    OUTPUT_DIR=$(cd $OUTPUT_DIR; pwd)
		else
		    srpmix_abort "No such directory: ${OUTPUT_DIR}"
		fi
		;;
	    --output-format=*)
	        export OUTPUT_FORMAT=$(echo $1 | sed 's/--output-format=//')
		;;
	    --target=*)
	        export SRPMIX_TARGET=$(echo $1 | sed 's/--target=//')
		SRPMIXBUILD_OPTIONS="$SRPMIXBUILD_OPTIONS $1"
		;;
	    --debug)
	        DEBUG=yes
		SRPMIXBUILD_OPTIONS="$SRPMIXBUILD_OPTIONS $1"
		set -x
		;;
	    --*)
	        print_usage 1>&2
		srpmix_abort "Unknow option: $1"
		;;
	    *)
	       break
	       ;;
	 esac
	 shift
    done
    
    if test "x$1" != "x"; then
	print_usage 1>&2
	srpmix_abort "too many arguments"
    fi

    if test -z "${OUTPUT_DIR}" && test "x${OUTPUT_FORMAT}" = "xrpm"; then
	if test "`whoami`" != "root"; then
	    srpmix_abort "You must be root to run this program"
	fi
    fi

    if test -z "${TARGET_NAME}" -a -z "${TARGET_SRPM}"; then
	print_usage 1>&2
	srpmix_abort "Specify either --name or --srpm"
    fi

    if test -n "${TARGET_NAME}" -a -n "${TARGET_SRPM}"; then
	print_usage 1>&2
	srpmix_abort "Specify either --name or --srpm"
    fi

    if test -n "${TARGET_SRPM}"; then
	if test ! -f "${TARGET_SRPM}"; then
	    case "${TARGET_SRPM}" in
		http://*|ftp://*)
		    wget -O ${MY_TMPDIR}/$(basename ${TARGET_SRPM}) ${TARGET_SRPM}
		    if test $? = 0; then
			TARGET_SRPM="${MY_TMPDIR}/$(basename ${TARGET_SRPM})"
		    else
			srpmix_abort "Failed in download ${TARGET_SRPM}" 
		    fi
		    ;;
		*)
		    srpmix_abort "No way to retrieve ${TARGET_SRPM}"
		    ;;
	    esac
	else
	    if srpmix_can_ln "${TARGET_SRPM}" ${MY_TMPDIR}; then
		ln ${TARGET_SRPM} ${MY_TMPDIR}/$(basename ${TARGET_SRPM})
	    else
		cp ${TARGET_SRPM} ${MY_TMPDIR}/$(basename ${TARGET_SRPM})
	    fi
	    TARGET_SRPM=${MY_TMPDIR}/$(basename ${TARGET_SRPM})
	fi
    fi

    if test -n "${TARGET_NAME}"; then
	yumdownloader --destdir=${MY_TMPDIR} --source "${TARGET_NAME}"
	TARGET_SRPM=$(/bin/ls ${MY_TMPDIR}/*.src.rpm)
    fi

    SRPMIXBUILD_OPTIONS="$SRPMIXBUILD_OPTIONS --output-format=$OUTPUT_FORMAT"
    SRPMIXBUILD_OPTIONS="$SRPMIXBUILD_OPTIONS --output-dir=$OUTPUT_DIR"
    SRPMIXBUILD_OPTIONS="$SRPMIXBUILD_OPTIONS --srpm=$TARGET_SRPM"
}

function main
{
#   all=`srpmix-db --list | grep -e '-srpmix$' | sed -e 's/-srpmix$//'`

    MY_TMPDIR=`mktemp -d`
    trap "chmod -R u+w $MY_TMPDIR; /bin/rm -rf $MY_TMPDIR" 0    
    OUTPUT_DIR=$MY_TMPDIR
    
    parse_arguments "$@"
    if test -n "$DEBUG"; then
	trap 0
	echo "*** Using $MY_TMPDIR as temporary directory"
    fi

    srpmix-build $SRPMIXBUILD_OPTIONS

    if test "x$OUTPUT_DIR" = "x$MY_TMPDIR"; then
        set -x
        files=$(find ${OUTPUT_DIR} -name '*.swrf')
        case "$OUTPUT_FORMAT" in
          rpm)
            files=$(find ${OUTPUT_DIR} -name '*.noarch.rpm')
	    echo $files | xargs yum localinstall -y --nogpgcheck
          ;;
          swrf)
	    echo $files | xargs srpmix-db -i
          ;;
        esac
    fi
    status=$?

    # Notify again
    if test -n "$DEBUG"; then
	echo "*** Using $MY_TMPDIR as temporary directory"
    fi
    
    return $status
}

{ main "$@" ; } < /dev/null
exit $?
