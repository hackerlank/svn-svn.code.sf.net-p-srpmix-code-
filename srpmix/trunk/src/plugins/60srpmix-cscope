ROOTDIR=
CSCOPE=cscope

BUILDDIR=
ETAGSDIR=
LOGFILE=
PLUGINDIR=

SRPMIX_CSCOPE_DEBUG=

LIBSRPMIX=libsrpmix.sh
function try_source
{
    source $1
    if test $? != 0; then
	echo "*** ABORT...cannot find $1" 1>&2
	exit 1
    fi
}
try_source ${LIBSRPMIX}

function print_usage
{
    echo "Usage: "
    echo "  $0 [--help|-h]"
    echo "  $0 [--debug] ROOTDIR"
    echo 
}

function parse_arguments
{
    status=


    while [ $# -gt 0 ]; do
	case "$1" in
	    --help|-h)
		print_usage
		exit 0
		;;
	    --debug)
		set -x
		PS4="${PS4}[cscope]"
		SRPMIX_CSCOPE_DEBUG=yes
		;;
	    *)
		break
		;;
	esac
	shift
    done

    if test $# -ne 1; then
	echo "wrong number of argument" 1>&2
	print_usage 1>&2
	srpmix_abort
    fi

    ROOTDIR=$(cd $1;pwd)
    shift

    BUILDDIR=${ROOTDIR}/pre-build
    PLUGINDIR=${ROOTDIR}/plugins/cscope
    LOGFILE=${PLUGINDIR}/cscope-log.es

    if ! test -d "${BUILDDIR}"; then exit 0; fi

    if ! test -d "$PLUGINDIR"; then
        mkdir -p $PLUGINDIR
    fi
}

REGEX='\(\.c++\|\.cxx\|\.cpp\|\.[ylch]\)\(\.in\)\?:\|text/'

function run_cscope
{
    d=$1
    o=$2
    l=$3

    es_print "cscope-start" --timestamp=\"`LANG=C date`\" --directory=\"$d\" --output=\"$o\" | tee -a $l
    cp /dev/null $o
    grep $REGEX ${PLUGINDIR}/../file/file-i | grep pre-build | cut -d: -f1 > ${PLUGINDIR}/cscope.files
    (cd $d && test -s ${PLUGINDIR}/cscope.files && \
	${CSCOPE} -b -i "${PLUGINDIR}/cscope.files" -f $o )
    es_print "cscope-end" --status=$? --timestamp=\"`LANG=C date`\" --output=\"$o\" | tee -a $l
}

function main
{
    srpmix_verify_commands "${CSCOPE}"
    parse_arguments "$@"

    if ( ! test -e "${PLUGINDIR}/cscope.out" ) ||
      test "${ROOTDIR}/STATUS" -nt "${PLUGINDIR}/cscope.out"; then
        run_cscope "${ROOTDIR}" "${PLUGINDIR}/cscope.out" $LOGFILE
    fi
}

es_time main "$@"
exit $?
