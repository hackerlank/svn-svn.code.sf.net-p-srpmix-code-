Summary: Script sets to builds sources
Name: sbuild
Version: @PACKAGE_VERSION@
Release: @RPM_RELEASE@
License: GPL
Group: Development/Tools
Buildarch: noarch
Source0: %{name}-%{version}.tar.bz2
BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-root
Requires: make rsync srpmix gauche

%description
Script sets to build sources

%prep
%setup -q

%build
%configure
make

%install
rm -rf $RPM_BUILD_ROOT
%makeinstall

%clean
rm -rf $RPM_BUILD_ROOT


%files
%defattr(-,root,root,-)
%{_bindir}/sbuild
%{_datadir}/sbuild/*

%config(noreplace) %{_sysconfdir}/sbuild/sbuild.cf


