# Adding an entry for "sources" to /etc/hosts.

sudo mkdir -p /var/lib/casket
sudo mount /dev/sdc1 /var/lib/casket
sudo chmod g+w /var/lib/casket
sudo chmod g+s /var/lib/casket
sudo chown root.mock /var/lib/casket

sudo mkdir -p /var/cache/casket
sudo mount /dev/sdd1 /var/cache/casket
sudo chmod g+w /var/cache/casket
sudo chmod g+s /var/cache/casket
sudo chown root.mock /var/cache/casket

ln -s /etc/mock/logging.ini .
ln -s /etc/mock/site-defaults.cfg .

